{
  "name": "hvsb",
  "version": "0.0.1",
  "description": "House Visual Bible Study Web App",
  "scripts": {
    "dev": "svelte-kit dev --host 0.0.0.0",
    "build": "svelte-kit build",
    "build:dev": "rm .env.production && svelte-kit build",
    "preview": "svelte-kit preview --open --host",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "check-format": "prettier . --ignore-path .gitignore --list-different",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "check": "svelte-check --threshold warning --diagnostic-sources js,svelte --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --threshold warning --diagnostic-sources js,svelte --tsconfig ./tsconfig.json --watch",
    "test": "jest",
    "deploy": "npm run validate && npm run build && wrangler publish",
    "start-emulators": "firebase emulators:start",
    "start-functions-emulator": "firebase emulators:start --only functions",
    "deploy-firestore-rules:dev": "firebase deploy --only firestore:rules -P default",
    "deploy-firestore-rules:prod": "firebase deploy --only firestore:rules -P production",
    "test-firestore-rules": "jest test/firestore/users --detectOpenHandles",
    "test-firestore-rules:watch": "jest test/firestore/users --watch"
  },
  "devDependencies": {
    "@sentry/browser": "^6.3.5",
    "@stripe/stripe-js": "^1.14.0",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/svelte": "^3.0.3",
    "@types/jest": "^27.4.0",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "algoliasearch": "4.8.4",
    "autoprefixer": "^10.4.2",
    "ckeditor5-build-classic-with-alignment-underline-smallcaps": "^1.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.15",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "firebase": "^9.6.4",
    "instantsearch.js": "4.12.0-experimental-typescript.0",
    "jest": "^27.4.7",
    "linkifyjs": "^3.0.0-beta.3",
    "lint-staged": "^10.5.4",
    "nprogress": "^0.2.0",
    "postcss": "^8.4.5",
    "postcss-load-config": "^3.1.1",
    "prettier": "^2.4.1",
    "prettier-plugin-svelte": "^2.4.0",
    "simple-git-hooks": "^2.7.0",
    "svelte": "^3.46.3",
    "svelte-check": "^2.2.6",
    "svelte-jester": "^2.1.5",
    "svelte-preprocess": "^4.9.4",
    "tailwindcss": "^3.0.15",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3",
    "vite-plugin-markdown": "^2.0.2"
  },
  "type": "module",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.+(ts|svelte)": "eslint --fix",
    "**/*.+(ts|svelte|json)": [
      "prettier --write"
    ]
  }
}
