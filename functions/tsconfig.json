{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "lib": [
    "esnext" // not included in current firebase init functions run
  ],
  "compileOnSave": true,
  "include": ["src", "scripts"]
}
